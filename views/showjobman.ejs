  <center><h1><strong>Pending Jobs</strong></h1></center>
  <div class="pure-g">
  <% jobs.forEach((job)=>{ %>


    <div class="pure-u-1-3"><div class="col-md-4">
              <div class="card mb-4 shadow-sm" style="width: 30rem;">

                <div class="card-body" style="width: 30rem;">
                  <ul class="card-text">
                    <li>Job Title : <%= job.title %> </li>
                    <li>Job Type : <%= job.type%></li>
                    <li>Location  : <%= job.location %></li>
                    <li>Salary    : $<%= job.salary %></li>
                    <li>Duration    : <%= job.duration %></li>
                    <li>Company Name : <%= job.companyname %></li>
                    <li>Company Contact : <%= job.companycontact%></li>

                    <!-- <li>Employs Selected: <br>
                        <ul>
                            <%job.applicants.forEach((emp) =>{%>
                                <li><%=emp.name%></li>
                            <%})%>
                        </ul></li> -->
                  </ul>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">

                <% const route = "/managerresponse/"+ job._id %>
                <form action="<%= route %>" method = "POST">

                    <input id="valid" type = "radio" name = "reqstatus" value = "valid">
                    <label for="valid">Valid</label><br>

                    <input id="invalid" type = "radio" name = "reqstatus" value = "invalid">
                    <label for="invalid">Invalid</label><br>

                    <input id="unfill" type = "radio" name = "reqstatus" value = "unfill">
                    <label for="unfill">Unable to fullfill</label><br>

                    <input id="filled" type = "radio" name = "reqstatus" value = "filled">
                    <label for="filled">Filled</label><br>
                    <button type="submit" class="btn btn-dark">Respond</button>
                </form>
                    </div>
                    <!-- <small class="text-muted"> Date: 12/12/12</small> -->
                  </div>
                </div>
              </div>
            </div></div>


         <%})%>
</div>



