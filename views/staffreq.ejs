<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css">
    <meta charset="utf-8">
    
    <title>Post Job</title>
  </head>
  <body>
    <h1>Create Staffing Request </h1>
    <div id="login">
  <% let route = "/staffreq/" + id %>
    <form id="login_form" action="<%= route%>" method="POST">
        <div class="field_container">
            <input type="text" class="form-control" name="title"  placeholder="Job Title">
          </div>
          <div class="field_container">
            <input type="text" class="form-control" name="type"  placeholder="Job Type">
          </div>
          <div class="field_container">
            <input type="text" class="form-control" name="location"  placeholder="location">
          </div>
          <div class="field_container">
            <input type="number" class="form-control" name="salary" placeholder="salary">
          </div>
          <div class="field_container">
            <input type="text" class="form-control" name="duration" placeholder="duration">
          </div>
          <div class="field_container">
            <input type="text" class="form-control" name="companyname" placeholder="companyname">
          </div>
          <div class="field_container">
            <input type="number" class="form-control" name="companycontact" placeholder="companycontact">
          </div>

          <h2>Select Employs(Upto 3)</h2>
          <div style="text-align:left;">
            <h4>
      <% employs.forEach((employ) => { %>

          <div>
                      <input type="checkbox" name = "employ[]" value= "<%= employ._id%>">
                      <% resroute = "/viewresume/" + employ._id%>
                      <a href="<%= resroute%>">
                      <%=employ.name%></a><br>
                      Skills : <%=employ.skills%><br>
                      Salary : <%=employ.emp_salary%><br>
                  </div>


          <%})%>
        </h4>
                </div style="text-align:center;">
        <button id="sign_in_button" type="submit">
          <span class="button_text">Create</span>
        </button>

      </div>


  </form>

    </div>

  </body>
</html>
